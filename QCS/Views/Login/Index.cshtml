@{
    ViewBag.Title = "Index";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    
    <style>
        .center-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-panel {
            background-color: #ffffff;
        }

        body {
            background-color: #97C2C1;
        }

    </style>
  
</head>

<body>
    <div class="center-container">
        <div class="col-md-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Iniciar sesión</h3>
                </div>
                <div class="panel-body">
                    <div class="text-center mt-4">
                        <img src="../Images/logoo.jpg" alt="Logo">
                    </div>
                    <form action="@Url.Action("Index", "Login")" method="post" role="form">
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Email" name="email" type="email" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Contraseña" name="clave" type="password" value="">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Recordar contraseña
                                </label>
                            </div>
                            <button type="submit" class="btn btn-lg btn-success btn-block">Iniciar sesión</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-danger">@ViewBag.Mensaje</div>
    }
</body>
</html>
