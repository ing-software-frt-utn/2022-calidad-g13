@model IEnumerable<Negocio.Modelos.ModeloOP>

@{
    ViewBag.Title = "Index";
}

<style>

    .table-style {
        border-collapse: collapse;
        border-spacing: 0;
    }

        .table-style th {
            background-color: #97C2C1;
            border: 1px solid black;
            
        }

        .table-style td {
            border: 1px solid black;
        }

    .btn-pausar {
        background-color: yellow;
        color: black;
         border: 1px solid black;
    }

    .btn-reanudar {
        background-color: green;
        color: white;
        border: 1px solid black;
    }

    .btn-finalizar {
        background-color: red;
        color: white;
        border: 1px solid black;
    }


</style>

<h2>Index</h2>

<p>
    @Html.ActionLink("Iniciar Orden de Produccion", "Create")
</p>
<table class="table table-style">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Numero_OP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_I)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado_OP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Num_linea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo.Denominacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.Nombre_Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_jornada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_F)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Numero_OP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_I)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado_OP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Num_linea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modelo.Denominacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color.Descripcion)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Nombre_Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id_jornada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_F)
        </td>
        <td>
            @Html.ActionLink("Pausar", "Pausar", new { id = item.Numero_OP }, new { @class = "btn-pausar" })
            @Html.ActionLink("Reanudar", "Reanudar", new { id = item.Numero_OP }, new { @class = "btn-reanudar" })
            @Html.ActionLink("Finalizar", "Finalizar", new { id = item.Numero_OP }, new { @class = "btn-finalizar" })


        </td>
    </tr>
}

</table>
