@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<script src="https://kit.fontawesome.com/ddfd32d5f5.js" crossorigin="anonymous"></script>

<h1 class="mt-4">Dashboard</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Dashboard</li>
</ol>

<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h4>Cantidad de Modelos</h4>
                        <h5 id="totalModelo">0</h5>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-shoe-prints fa-3x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h4>Cantidad de Colores</h4>
                        <h5 id="totalColores">0</h5>
                    </div>
                    <div class="col-sm-3">
                        <i class="fa-solid fa-palette fa-3x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



@section scripts{
    <script>
        jQuery.ajax({
            url: '@Url.Action("VistaDashboard","Home")',
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                var objeto = data;
                $("#totalModelo").text(objeto.TotalModelos)
                 $("#totalColores").text(objeto.TotalColores);
            }

        });
    </script>
}
