<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quality Control System</title>
    <script src="https://kit.fontawesome.com/ddfd32d5f5.js" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@


    <style>
        #sidebarToggle {
            float: right;
            margin-left: 10px; /* Agrega un margen a la izquierda para separar el botón de otros elementos */
        }
    </style>
</head>
<body>
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="index.html">Quality Control System</a>
        <div class="ms-auto me-2">

            <ul class="navbar-nav">
                <li class="nav-item">
                    @{
                        var usuario = Session["Usuario"] as Negocio.Modelos.ModeloUsuario;
                    }

                    @if (usuario != null)
                    {
                        <a class="nav-link" href="#">
                            <i class="fas fa-user"></i> @usuario.Nombre_Apellido - @usuario.Rol
                        </a>
                    }
                </li>
                <li class="nav-item">
                    @if (usuario != null)
                    {
                        <a class="nav-link" href="@Url.Action("CerrarSesion", "Login")">
                            <i class="fas fa-sign-out-alt"></i>
                        </a>
                    }
                    else
                    {
                        <a class="dropdown-item" href="@Url.Action("Index","Login")">
                            <i class="fa fa-sign-in"></i> Iniciar Sesion
                        </a>

                    }
                </li>
            </ul>

        </div>
        <button class="btn btn-link btn-sm order-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Resumen</div>
                        <a class="nav-link" href="@Url.Action("Index","Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        <a class="nav-link" href="@Url.Action("Index","Usuarios")">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Usuarios
                        </a>
                        <div class="sb-sidenav-menu-heading">Mantenimiento</div>
                        <a class="nav-link" href="@Url.Action("Index","Modelo")">
                            <div class="sb-nav-link-icon"> <i class="fas fa-shoe-prints"></i></div>
                            Modelos
                        </a>
                        <a class="nav-link" href="@Url.Action("Index","Color")">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-palette"></i></div>
                            Colores
                        </a>


                    </div>
                </div>
                @*<div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    Start Bootstrap
                </div>*@
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; IS 2023</div>
                        <div>
                            <a href="#">Politica &amp; Privacidad</a>
                            &middot;
                            <a href="#">Terminos &amp; Condiciones</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/complementos")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
